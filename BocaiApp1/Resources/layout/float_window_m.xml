<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayoutButton" >
    <ImageView
        android:layout_width="@dimen/button_width_m"
        android:layout_height="@dimen/button_height_m"
        android:id="@+id/imageButtonHome"
        android:src="@drawable/bocaiApp"
        android:backgroundTint="#00000000"
        android:background="#00000000"
    />
    <ImageView
        android:layout_width="@dimen/button_width_m"
        android:layout_height="@dimen/button_height_m"
        android:id="@+id/ImageButtonChrome"
        android:src="@drawable/chrome"
        android:backgroundTint="#00000000"
        android:background="#00000000"
    />
    <ImageView
        android:layout_width="@dimen/button_width_m"
        android:layout_height="@dimen/button_height_m"
        android:id="@+id/imageButtonViewFile"
        android:src="@drawable/docfile"
        android:backgroundTint="#00000000"
        android:background="#00000000"
    />
    <ImageView
        android:layout_width="@dimen/button_width_m"
        android:layout_height="@dimen/button_height_m"
        android:id="@+id/imageButtonSettings"
        android:src="@drawable/settings"
        android:backgroundTint="#00000000"
        android:background="#00000000"
    />
    <ImageView
        android:layout_width="@dimen/button_width_m"
        android:layout_height="@dimen/button_height_m"
        android:id="@+id/imageButtonClose"
        android:src="@drawable/close"
        android:backgroundTint="#00000000"
        android:background="#00000000"
    />
</LinearLayout>