

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/tableLayout1"
    android:background="@android:color/background_light">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout1">
        <TextView
            android:text="悬浮窗权限:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />
        <TextView
            android:text="未开启"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewFloatWindowGrant" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout12">
        <TextView
            android:text="存储读写权限:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />
        <TextView
            android:text="未开启"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSDWriteGrant" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout18">
        <TextView
            android:text="GPS权限:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />
        <TextView
            android:text="未开启"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewGPSGrant" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout19">
        <TextView
            android:text="设备信息权限:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />
        <TextView
            android:text="未开启"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewHardwareGrant" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout3"
        >
        <TextView
            android:text="摄像头权限:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />
        <TextView
            android:text="未开启"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCameraGrant" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout2">
        <TextView
            android:text="当前版本:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />
        <TextView
            android:text="1.0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewVersion" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout10">
        <TextView
            android:text="最新版本:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />
        <TextView
            android:text="1.0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewUpdateVersion" />
        <Button
            android:text="检查更新"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/buttonUpdate" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout4">
        <TextView
            android:text="按钮大小:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />
        <ImageView
            android:layout_width="@dimen/button_width_s"
            android:layout_height="@dimen/button_width_s"
            android:id="@+id/btnButtonSize_s"
            android:src="@drawable/bocaiApp"
            android:background="#00000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
        />
        <ImageView
            android:layout_width="@dimen/button_width_m"
            android:layout_height="@dimen/button_width_m"
            android:id="@+id/btnButtonSize_m"
            android:src="@drawable/bocaiApp"
            android:backgroundTint="#00000000"
            android:alpha="50"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
        />
        <ImageView
            android:layout_width="@dimen/button_width_l"
            android:layout_height="@dimen/button_width_l"
            android:id="@+id/btnButtonSize_l"
            android:src="@drawable/bocaiApp"
            android:backgroundTint="#00000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout6">
        <TextView
            android:text="浏览器网址:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:maxWidth="200dp"
            android:id="@+id/editTextURL"
            android:inputType="text|textUri" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout5">
        <TextView
            android:text="浏览器透明度:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />
        <SeekBar
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:minWidth="80dp"
            android:maxWidth="200dp"
            android:id="@+id/seekBarWebViewAlpha"
            android:max="255"
            android:min="50" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout7">
        <TextView
            android:text="阅读器"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout15">
        <TextView
            android:text="透明度："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView1" />
        <SeekBar
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:minWidth="80dp"
            android:maxWidth="200dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/seekBarTextViewAlpha"
            android:max="255"
            android:min="50" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffeeeeee"
        android:id="@+id/LinearLayout8"
        android:gravity="center">
        <TextView
            android:text="明亮"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:id="@+id/btnTextColorTheme_1"
            android:background="@android:color/background_light"
            android:textColor="@android:color/black"
            android:layout_marginLeft="20dp"
            android:shadowColor="@android:color/holo_orange_light"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
        />
        <TextView
            android:text="清晰"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:id="@+id/btnTextColorTheme_2"
            android:background="@android:color/black"
            android:textColor="@android:color/background_light"
            android:layout_marginLeft="5dp"
            android:shadowColor="@android:color/holo_orange_light"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
        />
        <TextView
            android:text="推荐"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/btnTextColorTheme_3"
            android:background="?android:attr/panelColorBackground"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:shadowColor="@android:color/holo_orange_light"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout16">
        <TextView
            android:text="当前方案"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/btnTextColorTheme_UserDefine"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/black"
            android:layout_marginLeft="5dp"
            android:shadowColor="@android:color/holo_orange_light"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout16">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout16">
        <TextView
            android:text="背景色:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView1" />
        <EditText
            android:text="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtReaderBGColor" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout18">
        <TextView
            android:text="文字色:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView5" />
        <EditText
            android:text="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtReaderTextColor" />
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout9">
        <TextView
            android:text="字体大小:"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />
        <TextView
            android:text="小"
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="@dimen/abc_text_size_small_material"
            android:shadowColor="@android:color/holo_orange_light"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/background_light" 
            android:id="@+id/btnTextSize_s" />
        <TextView
            android:text="中"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/abc_text_size_menu_material"
            android:gravity="center"
            android:shadowColor="@android:color/holo_orange_light"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:background="@android:color/black"
            android:textColor="@android:color/background_light" 
            android:layout_marginTop="10dp"
            android:id="@+id/btnTextSize_m" />
        <TextView
            android:text="大"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="@dimen/abc_text_size_large_material"
            android:shadowColor="@android:color/holo_orange_light"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/background_light" 
            android:id="@+id/btnTextSize_l" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout13">
        <CheckBox
            android:text="打开阅读器或浏览器自动开启摄像头"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chkAutoOpenCameraWhenOpenView" />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1" >
        <Button
            android:text="保存配置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/buttonSaveSettings" />
        <Button
            android:text="退出程序"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/buttonQuitApp" />
    </LinearLayout>
</LinearLayout>